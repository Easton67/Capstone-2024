        <!--#region ButtonStyles-->
        <Style x:Key="btnTheme" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource clrDark}" />
            <Setter Property="Background" Value="{StaticResource clrPrimary}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{StaticResource clrDark}"
                            BorderThickness="1"
                            CornerRadius="5">
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource clrPrimarySelected}" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="btnRegular" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource clrDark}" />
            <Setter Property="Background" Value="{StaticResource clrPrimary}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Width="150"
                            Height="45"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{StaticResource clrDark}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource clrPrimarySelected}" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="btnMedium" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource clrDark}" />
            <Setter Property="Background" Value="{StaticResource clrPrimary}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="1" 
                                CornerRadius="5"
                                Width="120" 
                                Height="35"
                                BorderBrush="{StaticResource clrDark}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource clrPrimarySelected}"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="btnLarge" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource clrDark}" />
            <Setter Property="Background" Value="{StaticResource clrPrimary}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="1" 
                                CornerRadius="5"
                                Width="150" 
                                Height="50"
                                BorderBrush="{StaticResource clrDark}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource clrPrimarySelected}"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="btnSmall" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource clrDark}" />
            <Setter Property="Background" Value="{StaticResource clrPrimary}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="1" 
                                CornerRadius="5"
                                Width="80" 
                                Height="20"
                                BorderBrush="{StaticResource clrDark}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource clrPrimarySelected}"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--#endregionButtonStyles-->

        <!--
            <summary>
            Creator:            Liam Easton
            Created:            02/02/2024
            Summary:            Creation of the DataGridStyles Resources
            Last Updated By:    Liam Easton
