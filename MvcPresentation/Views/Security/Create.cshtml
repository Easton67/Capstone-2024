@model DataObjects.Incident

@{
    ViewBag.Title = "Create";
    ViewBag.Hero = "Submit an Incident Report";
}

<div class="default-container">
    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                Who would you like to report?
                <div class="col-md-10">
                    @Html.EditorFor(model => model.reported, new { htmlAttributes = new { @class = "form-control fs-3" } })
                    @Html.ValidationMessageFor(model => model.reported, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Description of the Incident:
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                How severe is this? (Out of 5)
                <div class="col-md-10">
                    @Html.EditorFor(model => model.severity, new { htmlAttributes = new { @class = "form-control fs-3", min = 0, max = 5 } })
                    @Html.ValidationMessageFor(model => model.severity, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn-generic" />
                </div>
            </div>
        </div>
        }
    </div>
    <div class="form-group mt-4">
        <button class="btn-generic" onclick="window.location.href='@Url.Action("Index", "Security")'">
            Back to incidents
        </button>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
