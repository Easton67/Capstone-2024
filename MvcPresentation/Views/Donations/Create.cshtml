@model MvcPresentation.Models.DonationVM

@{
    ViewBag.Title = "Create";
    ViewBag.Hero = "Make A Donation";

    IEnumerable<String> donationTypes = (IEnumerable<String>)ViewBag.DonationTypes;
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="default-container d-flex justify-content-center">
    <div class="form-horizontal bg-grey p-3">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            Donation Type:
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.donationType,
                        new SelectList(donationTypes),
                        "Pick Donation Type",
                        new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.donationType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Name (Optional):
            <div class="col-md-10">
                @Html.EditorFor(model => model.DonationName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DonationName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Amount:
            <div class="col-md-10">
                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 text-center">
                <input type="submit" value="Make Donation" class="my-4 btn-grey br-30 p-3 grow" />
            </div>
        </div>
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
