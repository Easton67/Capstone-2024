@model MvcPresentation.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
    ViewBag.PageType = "NoHero";
}

<div class="default-container mt-4">
    <div>
        <div>
            <h1 class="pb-3 text-decoration-underline">@Model.GivenName @Model.FamilyName</h1>
        </div>
        <div>
            <dt>
                @Html.DisplayNameFor(model => model.Email)/UserName:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
        </div>
        <div class="d-flex">
            <dt>
                Roles:
            </dt>
            <dd class="mx-3">

            </dd>
        </div>
    </div>
    <div>
        <button class="btn-generic" onclick="window.location.href='@Url.Action("Index", "Admin")'">
            Back to users
        </button>
    </div>
</div>

